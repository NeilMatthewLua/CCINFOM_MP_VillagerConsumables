<% include views/templates/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="/add" method="post">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="orderID" id="orderID" 
                            placeholder="Order ID" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="order_date" id="order_date" 
                            placeholder="Order Date" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="payment_type" id="payment_type" 
                            placeholder="Payment Type (P/D)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="status" id="status" 
                            placeholder="Status (P/D/C)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="cancelled_by" id="cancelled_by" 
                            placeholder="Cancelled By (S/R)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="cancel_date" id="cancel_date" 
                            placeholder="Cancel Date" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="cancel_reason" id="cancel_reason" 
                            placeholder="Cancel Reason" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="location" id="location" 
                            placeholder="Location" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number"
                    min = '1' max = '5' class="form-control" name="timeliness" id="timeliness" 
                            placeholder="Timeliness (1-5)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number"
                    min = '1' max = '5' class="form-control" name="politness" id="politness" 
                            placeholder="Politeness (1-5)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number"
                    min = '1' max = '5' class="form-control" name="cust_satisfaction" id="cust_satisfaction" 
                            placeholder="Cust Satis (1-5)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number"
                    min = '1' max = '5' class="form-control" name="total_rating" id="total_rating" 
                            placeholder="Total Rating(1-5)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number"
                    min = '1' max = '5' class="form-control" name="total_rating" id="total_rating" 
                            placeholder="Total Rating(1-5)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" 
                    class="form-control" name="supplier_email" id="supplier_email" 
                            placeholder="Supplier Email" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" 
                    class="form-control" name="resident_email" id="resident_email" 
                            placeholder="Resident Email" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number" 
                    class="form-control" name="resegroup_ID" id="resegroup_ID" 
                            placeholder="Resident Group ID" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Student</button>
        </form>
    </div>
</body>
</html>
